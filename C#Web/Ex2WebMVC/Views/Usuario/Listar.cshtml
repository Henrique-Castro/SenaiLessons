@using Ex2WebMVC.Models;
@{
    Layout = "_Layout";
    ViewBag.Title = "Lista de Usu√°rios";
}
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">Senha</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var item in ViewData["usuarios"] as List<UsuarioModel>)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nome</td>
            <td>@item.Email</td>
            <td>@item.Senha</td>
            <td>@item.DataNascimento.ToShortDateString()</td>
            <td>
                <a href="/Usuario/Editar?id=@item.Id" class="btn btn-warning">Editar</a>
                <a href="#" class="btn btn-warning">Excluir</a>
            </td>
        </tr>
    }
  </tbody>
</table>